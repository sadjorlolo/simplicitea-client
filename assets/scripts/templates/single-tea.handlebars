<div class='selected-tea' data-id="{{tea.id}}">
 <h4>Name: {{tea.name}}</h4>
 <h4>Brand: {{tea.brand}}</h4>
 <h4>Type: {{tea.tea_type}}</h4>
 <h4>Packaging: {{tea.packaging}}</h4>

 <form class='new-review'>
   <fieldset>
     <input type='hidden' name='review[tea_id]' value ="{{tea.id}}">
     <select class='water-temp' name='review[water_temp]'>
       <option value='Hot'>Hot</option>
       <option value='Iced'>Iced</option>
     </select>
     <input type='text' class='steep-time' name='review[steep_time]' placeholder='time steeped (in minutes)'>
     <select class='rating' name='review[rating]'>
       <option value='1'>1</option>
       <option value='2'>2</option>
       <option value='3'>3</option>
       <option value='4'>4</option>
       <option value='5'>5</option>
     </select>
     <input type='text' class='notes' name='review[notes]' placehoder='any sugar? milk? cream?'>
     <input type='submit' name='submit' value='Submit Review'>
     <input type='button' class='cancel-review' value='Cancel'>
   </fieldset>
 </form>

</div>
