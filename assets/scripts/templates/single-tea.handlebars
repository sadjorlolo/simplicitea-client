<div class='selected-tea' data-id="{{tea.id}}">
 <h4>Name: {{tea.name}}</h4>
 <h4>Brand: {{tea.brand}}</h4>
 <h4>Type: {{tea.tea_type}}</h4>
 <h4>Packaging: {{tea.packaging}}</h4>

 <form class='new-review'>
   <fieldset>
     <input type='hidden' name='review[tea_id]' value ="{{tea.id}}">
     <h4>Water Temperature:
       <select class='water-temp' name='review[water_temp]'>
         <option value='Hot'>Hot</option>
         <option value='Iced'>Iced</option>
       </select>
    </h4>
    <h4> Steep Time (in minutes):
      <input type='text' class='steep-time' name='review[steep_time]'>
    </h4>
    <h4>Rating:
       <select class='rating' name='review[rating]'>
         <option value='1'>1</option>
         <option value='2'>2</option>
         <option value='3'>3</option>
         <option value='4'>4</option>
         <option value='5'>5</option>
       </select>
     </h4>
     <h4>Notes: <br>
       <textarea cols='32' wrap='soft' rows='3' class='notes' name='review[notes]' placeholder='any sugar? milk? cream?'></textarea>
     </h4>
     <input type='submit' class='new-review-button' name='submit' value='Submit Review'>
     <button type='click' class='cancel-review'>Cancel</button>
   </fieldset>
 </form>

</div>
